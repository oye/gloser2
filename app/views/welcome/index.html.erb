<div class="px-4 py-5 text-center">
  <%= image_tag "translation.webp", size: "300" %>
  <h1 class="display-5 fw-bold text-body-emphasis"><%= t(:translations) %></h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4"><%= t(:welcome_text) %>
      <%= link_to t(:new_assignment_here),
      new_assignment_path,
      class: "link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %></p>
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
      <%= form_with url: new_run_from_welcome_path do |f| %>
        <div class="input-group">
          <%= f.text_field "public_task_code", placeholder: t(:enter_assignment_code), class: "form-control form-control-lg" %>
          <div class="input-group-append ms-2">
            <%= f.submit "Start", class: "btn btn-primary btn-lg px-4 gap-3" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
