<% precentage = session[:score].to_f / session[:total_steps].to_f * 100 %>
<div class="row justify-content-center">
  <div class="col-auto">
    <% if precentage > 90 %>
      <h2 class="text-primary"><%= t(:great_effort) %></h2>
    <% elsif precentage > 50 %>
      <h2 class="text-primary"><%= t(:good_effort) %></h2>
    <% else %>
      <h2 class="text-primary"><%= t(:good_effort_try_again) %></h2>
    <% end %>
  </div>
</div>
<div class="row justify-content-center">
  <% if precentage > 90 %>
    <%= image_tag "great_effort.jpg", class: "img-fluid w-25" %>
  <% elsif precentage > 50 %>
    <%= image_tag "good_effort.jpg", class: "img-fluid w-25", height: "100" %>
  <% else %>
    <%= image_tag "try_again.jpg", class: "img-fluid w-25", height: "100" %>
  <% end %>
</div>
<div class="row justify-content-center">
  <div class="col-auto">
    <h3 class="text-primary"><%= t(:total_score, score: session[:score], max_score: session[:total_steps]) %></h3>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-auto">
    <%= link_to t(:restart_assignment), new_run_path(@assignment.public_task_code), class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-auto">
    <%= link_to t(:home), root_path %>
  </div>
</div>
